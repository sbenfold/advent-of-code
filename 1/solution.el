(defun aoc/1/read-input ()
  (->> (f-read-text "input.txt")
     ;; (->> (f-read-text "example-input.txt")
     (s-trim)
     (s-lines)
     (-map #'s-collapse-whitespace)
     ))

(defun aoc/1/helper ()
  (->> (aoc/1/read-input)
     (--map (s-split " " it))
     ;; (-map #'string-to-number)
     (--map (list (string-to-number (car it))
                 (string-to-number (cadr it))))
     (-unzip)
     (--map (-sort #'< it))
     ))

(->> (apply #'-zip-with #'- (aoc/1/helper))
   (-map #'abs)
   (-reduce #'+)
   )

